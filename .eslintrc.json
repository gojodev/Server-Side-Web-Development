{
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "rules": {
        "semi": ["error", "always"],
        "no-unused-vars": "warn"
    }
}